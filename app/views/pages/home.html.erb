
<div class="content">

	<%= render 'service_requests/step_header' %>

	<div class="form-container">

		<%= form_for(@service_request) do |f| %>
		  <% if @service_request.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service_request from being saved:</h2>

		      <ul>
		      <% @service_request.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.label :email %><br>
		    <%= f.email_field :email, required: true %>
		  </div>
		  <div class="field">
		    <%= f.label :zip_code %><br>
		    <%= f.text_field :zip_code, required: true  %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Next", class:"button green-background medium" %>
		  </div>
		<% end %>

	</div>

</div>
