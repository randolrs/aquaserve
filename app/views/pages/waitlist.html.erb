
<div class="content">

	<%= form_tag waitlist_signup_path do %>

		<h2 class="centered">We connect your aquarium services business with local, paying clients.</h2>

		<br>

		<h3 class="centered">Signup below to get notified when we come to your area:</h3>

		<br>

		<div class="form-content">

			<% if flash[:message] %>

				<div class="flash">

					<%= flash[:message] %>

				</div>

			<%end%>

		  	<div class="field">

		  		<label>Zip Code</label>
		    	<input type="text" name="zip_code" placeholder="Zip Code">

		  	</div>

		  	<div class="field">

		  		<label>Email Address</label>

		    	<input type="text" name="email" placeholder="Email Address">

		  	</div>


		  	<br>

			<div class="actions centered">

				<input type="submit" value="Put Me on the Waiting List" class="button orange-background medium" %>

			</div>

		</div>

	<%end%>

</div>