
<div class="content">

	<%= render 'service_requests/step_header' %>

	<div class="form-container">

		<%= form_for(@service_request) do |f| %>

		<%# form_tag update_tank_details_path do %>

		  	<div class="field centered">

		    	<label>How many gallons in your tank?</label><br>

		    	<%= f.number_field :gallons_in_tank, required: true, class: "short centered" %>

		  	</div>

			<div class="field centered">

				<label>Is it a salt water tank?</label><br>

				<ul class="horizontal centered">
					<li><a>Yes</a></li>
					<li><a>No</a></li>
				</ul>
				<%# f.check_box :salt_water %>
			</div>

		  <div class="actions">

		    <input type="submit" value="Next" class="button green-background medium" %>

		  </div>


		<%end%>

	</div>

</div>
